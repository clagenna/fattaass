<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="sm.clagenna.stdcla.utils">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<!--  PatternLayout pattern="%d %-5p  %X{loginame} %-32F:%L - %m%n" -->
			<PatternLayout pattern="%d %-5p %-44c:%L - %m%n"/>
		</Console>
		<File name="fattaass" fileName="log/fattaass.log" append="true">
			<PatternLayout pattern="%-32c  %d{yyyy-MM-dd HH:mm:ss} %-5p: %m%n %throwable{3}"/>
		</File>
		<RollingFile name="rollingFile" fileName="log/rollfattaass.log" filePattern="log/fattaass.%d{yyyy-MM-dd}.log" ignoreExceptions="false">
			<PatternLayout pattern="%-46c  %d{yyyy-MM-dd HH:mm:ss} %-5p: %m%n %throwable{3}"/>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"/>
			</Policies>
			<DefaultRolloverStrategy max="5"/>
		</RollingFile>
		<!--
 		<appender name="roll-by-time-and-size" class="org.apache.log4j.rolling.RollingFileAppender"> 
		-->
		<!--
