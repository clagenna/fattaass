 				<param name="ActiveFileName" value="log/rollTimeSizefattaass.log" /> 
		-->
		<!--
 				<param name="FileNamePattern" value="log/rollTimeSizefattaass_%d{HH-mm}.log" /> 
		-->
		<!--
 			</rollingPolicy> 
		-->
		<!--
 			<triggeringPolicy 
		-->
		<!-- 				class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy"> -->
		<!--
 				<param name="MaxFileSize" value="100" /> 
		-->
		<!--
 			</triggeringPolicy> 
		-->
		<!--
 			<layout class="org.apache.log4j.PatternLayout"> 
		-->
		<!--
 				<param name="ConversionPattern" 
		-->
		<!-- 					value="%-32c  %d{yyyy-MM-dd HH:mm:ss} %-5p: %m%n %throwable{3}" /> -->
		<!--
 			</layout> 
		-->
		<!--
 		</appender> 
		-->
		<Null name="nullapp"/>
		<MioAppender name="MIOAPPENDER">
			<PatternLayout pattern="%logger(%L)\t%d\t%level\t%m%n"/>
		</MioAppender>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="console"/>
			<AppenderRef ref="rollingFile"/>
			<AppenderRef ref="MIOAPPENDER"/>
		</Root>
		<logger name="javafx.scene" level="WARN">
			<AppenderRef ref="console"/>
		</logger>
		<logger name="com.microsoft" level="INFO">
			<AppenderRef ref="console"/>
			<AppenderRef ref="rollingFile"/>
		</logger>
	</Loggers>
</Configuration>
